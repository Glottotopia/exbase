##     <span class="togglebutton"  onClick="toggleBox('meaningbox')">&#x25BE;&#x25B4;</span>
## </h2> 


<div class="navigatorbox" id="meaningbox">  

    <script>
    $(function() {
	var availableMeaningTags = []
	var els = document.getElementsByName("facetmeaning") 
	for (i=0;i<els.length;i++){ 
	    availableMeaningTags.push(els[i].value+':'+els[i].title)
	} 
	$( "#meanings" ).autocomplete({
	source: availableMeaningTags
	});
    });
    </script>

    <div class="ui-widget">
	<form action="#{url_for_filters}" method="GET" > 
## 	    <label for="meanings"> Meanings</label> 
	    <input id="meanings" onkeydown="$( '#meaningfq').val(this.value)" onFocus="$( '#meaning').attr('style','opacity:0.2')" onBlur="$( '#meaning').attr('style','opacity:1')"/>
	    <input id="meaningfq" type="hidden" name="fq" />
	</form>
    </div>  


    <div id="meaning">
    #foreach($field in $response.facetFields)
	## Hide facets without value
	#if($field.values.size() > 0)
	    #if($field.name != "vernacularword"   and $field.name != "language"   and $field.name != "iso639-3" and $field.name != "ancestor"  and $field.name != "author_s" and $field.name != "partof"   and $field.name != "dtype"     and $field.name != "year")
	    <div>
	    <span class="togglebutton"  name="show" id="$field.name" onClick="toggleFacets('ul$field.name')">&#x25BE;&#x25B4;</span>
		
	    <span class="facet-field">$field.name.replace('_',' ')</span>
		
		    <ul id="ul$field.name" name="facetul" style="display:none;"> 

		#foreach($facet in $field.values)
		<li>
		    <input type="hidden" value="$field.name" title="$facet.name" name="facetmeaning" />
		    <a href="#url_for_facet_filter($field.name, $facet.name)"></a> ($facet.count)
		</li>
		#end
	    </ul>
		</div>
	    #end  ## end if !- glparent.oss
	#end  ## end if > 0
    #end    ## end for each facet field
    </div>
</div>  